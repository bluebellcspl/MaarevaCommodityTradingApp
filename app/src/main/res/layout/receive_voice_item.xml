<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_VoicePlayer_ReceiveItem"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                app:cardBackgroundColor="#F3D99E"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnPlayVoice_PlayerReceiveItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="play button"
                        app:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/baseline_play_arrow_24"
                        app:fabCustomSize="40dp" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/btnPauseVoice_PlayerReceiveItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="pause button"
                        app:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/baseline_pause_24"
                        android:visibility="gone"
                        app:fabCustomSize="40dp" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/voicePlayerSeekBar_PlayerReceiveItem"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:progressTint="@color/colorPrimary"
                        android:thumbTint="@color/colorPrimaryDark" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvDate_ReceiveItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cv_VoicePlayer_ReceiveItem"
                android:layout_marginStart="3dp"
                android:text="21-03-2024 05:33 PM"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
