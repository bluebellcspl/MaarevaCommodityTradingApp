                            app:boxCornerRadiusTopEnd="@dimen/_3sdp"
                            app:boxCornerRadiusTopStart="@dimen/_3sdp"
                            app:boxStrokeColor="@color/colorPrimary"
                            app:endIconMode="clear_text">

