<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_AuctionDetails_BuyerAuctionItemAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_PCAName_BuyerAuctionItemAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="V S Group Traders"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <EditText
                            android:id="@+id/tv_LowerLimit_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.25"
                            android:background="@drawable/outline_bg"
                            android:inputType="number"
                            android:text="10000000"
                            android:fontFamily="@font/poppins"
                            android:selectAllOnFocus="true"
                            android:maxLength="5"
                            android:padding="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            android:nextFocusDown="@id/tv_UpperLimit_BuyerAuctionItemAdapter"/>

                        <EditText
                            android:theme="@style/Widget.AppCompat.EditText"
                            android:id="@+id/tv_UpperLimit_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1.25"
                            android:maxLength="5"
                            android:background="@drawable/outline_bg"
                            android:fontFamily="@font/poppins"
                            android:inputType="number"
                            android:text="10000000"
                            android:selectAllOnFocus="true"
                            android:padding="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:enabled="false"
                            android:id="@+id/tv_Amount_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/outline_bg"
                            android:text="100000000"
                            android:fontFamily="@font/poppins"
                            android:padding="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/disableText"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_BagCount_BuyerAuctionItemAdapter"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                app:cardBackgroundColor="#797F8D"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_anchor="@id/cv_AuctionDetails_BuyerAuctionItemAdapter"
                app:layout_anchorGravity="top|end">

                <EditText
                    android:id="@+id/tv_Bags_BuyerAuctionItemAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:maxLength="5"
                    android:text="500"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:nextFocusDown="@id/tv_LowerLimit_BuyerAuctionItemAdapter"
                    android:textSize="@dimen/_15ssp" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>