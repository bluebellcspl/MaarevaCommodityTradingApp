        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_AuctionDetails_BuyerAuctionItemAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/tv_PCAName_BuyerAuctionItemAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="V S Group Traders"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <EditText
                            android:id="@+id/tv_LowerLimit_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1.3"
                            android:background="@drawable/outline_bg"
                            android:inputType="number"
                            android:textCursorDrawable="@null"
                            android:text="10000000"
                            android:maxLength="4"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/tv_UpperLimit_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1.3"
                            android:maxLength="4"
                            android:background="@drawable/outline_bg"
                            android:textCursorDrawable="@null"
                            android:inputType="number"
                            android:text="10000000"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <EditText
                            android:enabled="false"
                            android:id="@+id/tv_Amount_BuyerAuctionItemAdapter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="0.7"
                            android:background="@drawable/outline_bg"
                            android:textCursorDrawable="@null"
                            android:inputType="number"
                            android:text="100000000"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_BagCount_BuyerAuctionItemAdapter"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                app:cardBackgroundColor="#797F8D"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_anchor="@id/cv_AuctionDetails_BuyerAuctionItemAdapter"
                app:layout_anchorGravity="top|end">

                <EditText
                    android:id="@+id/tv_Bags_BuyerAuctionItemAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:padding="@dimen/_5sdp"
                    android:text="500"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </RelativeLayout>
</layout>