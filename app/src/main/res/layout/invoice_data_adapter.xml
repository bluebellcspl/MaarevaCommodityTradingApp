<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorSecondaryLight"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/rl_ShopHeader_InvoiceAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvShopName_InvoiceAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/mChb_Shop_InvoiceAdapter"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:text="14 - Somnath T."
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvShopName_InvoiceAdapter"
                        android:layout_toLeftOf="@id/mChb_Shop_InvoiceAdapter"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvDate_InvoiceAdapter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical"
                            android:text="17-04-2024"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvBag_Amount_TotalPrice_InvoiceAdapter"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="1000/131110/1234567890"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:buttonTint="@color/colorPrimary"
                        android:id="@+id/mChb_Shop_InvoiceAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleX="1.1"
                        android:scaleY="1.1" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_below="@id/rl_ShopHeader_InvoiceAdapter"
                    android:id="@+id/ll_Expandable_InvoiceAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcView_ShopEntries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:padding="5dp"
                        tools:listitem="@layout/shop_entries_adapter" />
                </LinearLayout>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>