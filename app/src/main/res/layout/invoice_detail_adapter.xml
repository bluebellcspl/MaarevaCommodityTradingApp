<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_AuctionDetails_InvoiceDetailAdapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/colorSecondaryLight"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/tv_PCAName_InvoiceDetailAdapter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="V S Group Traders"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">
                        <EditText
                            android:id="@+id/tv_Bags_InvoiceDetailAdapter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.4"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:enabled="false"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:hint="@string/bags"
                            android:padding="@dimen/_3sdp"
                            android:fontFamily="@font/poppins"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            />
                        <EditText
                            android:id="@+id/tv_Rate_InvoiceDetailAdapter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.5"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:enabled="false"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:padding="@dimen/_3sdp"
                            android:fontFamily="@font/poppins"
                            android:selectAllOnFocus="true"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <EditText
                            android:theme="@style/Widget.AppCompat.EditText"
                            android:id="@+id/tv_Weight_InvoiceDetailAdapter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:layout_margin="2dp"
                            android:background="@drawable/outline_bg"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:fontFamily="@font/poppins"
                            android:inputType="numberDecimal"
                            android:hint="@string/weight"
                            android:selectAllOnFocus="true"
                            android:padding="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:imeOptions="actionNext"
                            android:textStyle="bold"
                            android:nextFocusDown="@id/tv_Amount_InvoiceDetailAdapter"/>

                        <EditText
                            android:id="@+id/tv_Amount_InvoiceDetailAdapter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="0.26"
                            android:background="@drawable/outline_bg"
                            android:textCursorDrawable="@drawable/custom_cursor"
                            android:inputType="numberDecimal"
                            android:hint="@string/amount"
                            android:imeOptions="actionDone"
                            android:fontFamily="@font/poppins"
                            android:padding="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />
                    </LinearLayout>



                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_BagCount_InvoiceDetailAdapter"
                android:layout_width="@dimen/_122sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:elevation="@dimen/_5sdp"
                app:cardBackgroundColor="#797F8D"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true"
                app:layout_anchor="@id/cv_AuctionDetails_InvoiceDetailAdapter"
                app:layout_anchorGravity="top|end">

                <TextView
                    android:id="@+id/tv_Date_InvoiceDetailAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/_5sdp"
                    android:text="30-04-2024"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>